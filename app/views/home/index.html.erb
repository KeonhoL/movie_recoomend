

    <!-- Page Content -->
    <div class="container">
         <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    게시판
                </h1>
            </div>
            <% @posts.each do |p| %>
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4><i class="fa fa-fw fa-check"></i><%= p.title %></h4>
                        </div>
                        <div class="panel-body">
                            <p><%= p.content %></p>
                            <a href="/bulletins/1/posts/<%= p.id %>" class="btn btn-default">Read More</a>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
        <!-- /.row -->

        <!-- Portfolio Section -->
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">인기있는 영화</h2>
            </div>
            <% @movie.each do |m| %>
                <div class="col-md-4 col-sm-6">
                    <a href="/movie/show/<%= m.id %>">
                        <% if m.img_url.size < 1 %>
                            <img class="img-responsive img-portfolio img-hover" src="https://pl-movie-recommend-keonhol.c9users.io/noimage.jpg" alt="">
                        <% else %>
                            <img class="img-responsive img-portfolio img-hover" src="<%= m.img_url %>" alt="">
                        <% end %>
                        <p><%= m.title %></p>
                        
                    </a>
                </div>
            <% end %>
        </div>
        <!-- /.row -->

        <!-- Features Section -->
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">이 달에 Best Movie</h2>
            </div>
            <div class="col-md-6">
                <p>이 달의 베스트 영화는 다음과 같습니다.</p>
                <ul>
                    <li><%= @best_movie.title %></strong></li>
                    <li><%= @best_movie.category.movie_category %></li>
                    <li><%= @best_movie.director %> 감독</li>
                    <li><%= @best_movie.actor_one %> 출연</li>
                    <li><%= @best_movie.reviews.count %> Reviews</li>
                </ul>
            </div>
            <div class="col-md-6">
                <img class="img-responsive" src="<%= @best_movie.img_url %>" alt="">
            </div>
        </div>
        <!-- /.row -->



    </div>
    <!-- /.container -->
    

    <div class="container">
        <hr>
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; 2016 PL Lab</p>
                </div>
            </div>
        </footer>
    </div>
     
        <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Script to Activate the Carousel -->
    <script>
    $('.carousel').carousel({
        interval: 5000 //changes the speed
    })
    </script>