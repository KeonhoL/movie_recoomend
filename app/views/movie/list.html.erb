<%= flash[:alert] %>
<div class="row">
	<h2>영화 검색</h2>
        <div id="custom-search-input">
            <form action="list" method="GET">
                <div class="input-group col-md-12">
                    <input name="movie" type="text" class="search-query form-control" placeholder="Search" />
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-danger" type="button" >
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
            </form>
            <% if !@m.nil? %>
                
            <% end %>
        </div>
</div>
<br><br>
<div class="row">
	<div class="well">
        <div class="list-group">
            <% if !@m.nil? %>
                <% @m.each do |s| %>
                    <a href="#" class="list-group-item">
                        <div class="media col-md-3">
                            <% if s.img_url == nil? %>
                                <figure class="poll">
                                    <img class="media-object img-rounded img-responsive" src="http://placehold.it/350x250" alt="placehold.it/350x250" >
                                </figure>
                            <% else %>
                                <figure class="pull-left">
                                    <img class="media-object img-rounded img-responsive" src="<%= s.img_url %>" alt="placehold.it/350x250" >
                                </figure>
                            <% end %>
                        </div>
                        <div class="col-md-6">
                            <h4 class="list-group-item-heading"><%= s.title %></h4>
                            <p class="list-group-item-text">
                                영화 설명
                            </p>
                        </div>
                        <div class="col-md-3 text-center">
                            <br><br><br>
                            <h2 class="hidden"> <%= s.director %> <small> 감독 </small></h2>
                            <form action="/movie/show/<%= s.id %>" method="get">
                                <button type="submit" class="btn btn-primary btn-lg btn-block">자세히 보기</button>
                            </form>
                            <div class="stars">
                                <% 0.upto((s.score / 2).to_i) do |c| %>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <% @s = c %>
                                <% end %>
                                <% 1.upto(5-(@s+1)) do |c| %>
                                    <span class="glyphicon glyphicon-star-empty"></span>
                                <% end %>
                            </div>
                            <p> 평점 <%= s.score %> <small> / </small> 10 </p>
                        </div>
                    </a>
                <% end %>
            <% end %>
        </div>
    </div>
</div>