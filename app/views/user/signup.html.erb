
<article class="container">
    <div class="page-header">
        <h1>회원 가입</h1>
    </div>
    <div class="col-md-6 col-md-offset-3">
        <form role="form" method="post" action="/user/signup_complete">
            <div class="form-group">
                <label for="InputId">아이디</label>
                <input name="username" type="id" class="form-control" id="InputId" placeholder="아이디 입력">
            </div>
            <div class="form-group">
                <label for="InputPassword1">비밀번호</label>
                <input name="password" type="password" class="form-control" id="InputPassword1" placeholder="비밀번호 입력">
            </div>
            <div class="form-group">
                <label for="InputPassword2">비밀번호 확인</label>
                <input name="retype_password" type="password" class="form-control" id="InputPassword2" placeholder="비밀번호 확인">
            </div>
            <div class="form-group">
                <label for="userage">나이</label>
                <input name="age" type="number" class="form-control" name="age" min="0" max="100" title="Format: 3 digits">
    	    </div>   
    
     	    <div class="form-group">
                <label for="usersex">성별</label>
                <select class="form-control" name="gender">
                    <% @sex.each do |s| %>
                        <option value="<%= s.id %>"><%= s.sex %></option>
                    <% end %>
                </select>  
            </div>
     	    <div class="form-group">
                <label for="userjob">직업</label>
    		    <select class="form-control" name="job">
                    <% @job.each do |s| %>
                        <option value="<%= s.id %>"><%= s.name %></option>
                    <% end %>
                </select>
            </div>
            <div class="form-group">
                <label>선호 장르</label>
                <select class="form-control" name="category">
                    <% @cate.each do |c| %>
                        <option value='<%= c.id %>'><%= c.movie_category %></option>
                    <% end %>
                </select>
            </div>
            
            <div>
                <label>감정</label>    
                <select class="form-control" name="emotion">
                    <% @emo.each do |c| %>
                        <option value='<%= c.id %>'><%= c.name %></option>
                    <% end %>
                </select>
            </div>    
                
            <br>
            <br>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-info">회원가입<i class="fa fa-check spaceLeft"></i></button>
            </div>
            <p><%= flash[:alert] %></p>
        </form>
    </div>
</article>
