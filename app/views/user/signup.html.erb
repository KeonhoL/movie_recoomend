
<div class="container">
    <h2>회원가입</h2> 
    <br>
    <form action="/user/signup_complete" method="post">
        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <label>이메일</label>
                    <input type="email" name="username" placeholder="이메일" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
          <div class="col-lg-3">
            <div class="form-group" id="password_type">
                <label>비밀번호</label>
                <input type="password" name="password" class="form-control">
            </div>
          </div>
          <div class="col-lg-3">
            <div class="form-group" id="password_type">
                <label>비밀번호 확인</label>
                <input type="password" name="retype_password" class="form-control">
            </div>
          </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <label>나이</label>
                <input type="number" class="form-control" name="age" min="0" max="100" title="Format: 3 digits">
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-lg-3">
                <label>성별</label>
                <select class="form-control" name="gender">
                    <% @sex.each do |s| %>
                        <option value="<%= s.id %>"><%= s.sex %></option>
                    <% end %>
                </select>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-lg-3">
                <label>지역</label>
                <select class="form-control" name="location">
                    <% @location.each do |s| %>
                        <option value="<%= s.id %>"><%= s.name %></option>
                    <% end %>
                </select>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-lg-3">
                <label>계절</label>
                <select class="form-control" name="weather">
                    <% @weather.each do |s| %>
                        <option value="<%= s.id %>"><%= s.name %></option>
                    <% end %>
                </select>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-lg-3">
                <label>선호 장르</label>
                <select class="form-control" name="category">
                    <% @cate.each do |c| %>
                        <option value='<%= c.id %>'><%= c.movie_category %></option>
                    <% end %>
                </select>
            </div>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">회원 가입</button>
    </form>
</div>
