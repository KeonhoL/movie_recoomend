
<article class="container">
    <div class="page-header">
      <h1 style="float:center;">로그인</h1>
    </div>
    <div class="col-md-6 col-md-offset-3">
        <form action="/user/login_complete" role="form" method="post">
            <div class="form-group">
              <label for="InputId">아이디</label>
              <input name="username" type="id" class="form-control" id="InputId" placeholder="아이디 입력">
            </div>
    
            <div class="form-group">
              <label for="InputPassword1">비밀번호</label>
              <input name="password" type="password" class="form-control" id="InputPassword1" placeholder="비밀번호 입력">
            </div>
            
            <div class="form-group text-center">
                 <button type="submit" class="btn btn-info btn-lg btn-block">로그인</button>
            </div>
            <div class="form-group text-center">
                 <button type="button" class="btn btn-warning btn-lg btn-block" onclick="location.href='/user/signup';">회원 가입</button>
            </div>
            <p><%= flash[:alert] %></p>
        </form>
    </div>
</article>